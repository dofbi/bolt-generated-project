---
    interface Props {
      title: string;
    }

    const { title } = Astro.props;
    ---

    <!doctype html>
    <html lang="fr">
      <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
      </head>
      <body class="bg-gray-100 text-gray-900">
        <slot />
      </body>
    </html>
